<!-- Article Contents -->
<section id="section-override" class="section">
<article class="article">
  <h1 class="is-size-2 has-text-centered">
    <%- post.title %>
  </h1>
  <% if (is_post() || is_home()){ %>
  <h2 class="is-size-4 has-text-centered">
    <time datetime="<%= date_xml(post.date) %>"><%= date(post.date, 'MMMM D, YYYY') %></time>
  </h2>
  <% } %>
  <hr id="hr-override">
  <%- post.content %>
  <%- partial('post-nav') %>
</article>
</section>

