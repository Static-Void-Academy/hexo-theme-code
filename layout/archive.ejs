<% if (is_archive()){ %>
<section id="section-override" class="section">
<article class="article">
  <h1 class="is-size-2 has-text-centered">
    <%= __('archives') %>
  </h1>
  <h2 class="is-size-4 has-text-centered">
    <% if (site.posts.length == 1){ %>
      <%= __('post_total_count_one', site.posts.length) %>
    <% } else { %>
      <%= __('post_total_count', site.posts.length) %>
    <% } %>
  </h2>
  <hr id="hr-override">
  <% if (is_current("archives/", true)){ %>
	<% var last; %>
	<% site.posts.sort('-date').map(function(post, i){ %>
		<% var year = post.date.year(); %>
		<% if (last != year){ %>
		  <% if (last != null){ %>
		    </div></section>
		  <% } %>
		  <% last = year; %>
		  <section>
		    <div><h1>
          <a href="<%- url_for(config.archive_dir + '/' + year) %>" class="archive-year">
            <%- fa_inline('calendar', {prefix: 'far'}) %>
            <%= year %>
          </a>
        </h1></div>
		    <div>
		<% } %>
      <a href="<%- url_for(post.path) %>">
        <div class="columns is-mobile is-gapless">
          <div class="column is-1 is-hidden-mobile"></div>
          <div id="column-gap" class="column is-3">
            <h2 class="is-size-6">
              <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, 'MMM DD, YYYY') %></time>
            </h2>
          </div>
          <div class="column is-1"></div>
          <div class="column auto">
            <h2 class="is-size-6">
              <%= post.title %>
            </h2>
          </div>
        </div>
      </a>
	<% }) %>

	<% if (site.posts.length){ %>
		</div></section>
	<% } %>
  <% } else { %>
    <% var last; %>
    <% page.posts.each(function(post, i){ %>
      <% var year = post.date.year(); %>
      <% if (last != year){ %>
        <% if (last != null){ %>
          </div></section>
        <% } %>
        <% last = year; %>
        <section>
          <div><h1>
            <a href="<%- url_for(config.archive_dir + '/' + year) %>" class="archive-year">
              <%- fa_inline('calendar', {prefix: 'far'}) %>
              <%= year %>
            </a>
          </h1></div>
          <div>
      <% } %>
      <a href="<%- url_for(post.path) %>">
        <div class="columns is-mobile is-gapless">
          <div class="column is-1 is-hidden-mobile"></div>
          <div id="column-gap" class="column is-3">
            <h2 class="is-size-6">
              <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, 'MMM DD, YYYY') %></time>
            </h2>
          </div>
          <div class="column is-1"></div>
          <div class="column auto">
            <h2 class="is-size-6">
              <%= post.title %>
            </h2>
          </div>
        </div>
      </a>
    <% }) %>
    <% if (page.posts.length){ %>
      </div></section>
    <% } %>

    <% if (page.total > 1){ %>
      <nav id="page-nav">
        <% var prev_text = __('prev');var next_text = __('next')%>
        <%- paginator({
          prev_text: prev_text,
          next_text: next_text
        }) %>
      </nav>
    <% } %>
  <% } %>
</article>
</section>
<% } %>
