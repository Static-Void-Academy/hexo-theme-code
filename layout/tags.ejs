<section id="section-override" class="section">
<article class="article">
  <h1 class="is-size-2 has-text-centered">
    <%= __('tags') %>
  </h1>
  <hr id="hr-override">
  <div class="tag-cloud font-sans">
    <% if (site.tags.length){ %>
      <%- tagcloud({min_font: 14, max_font: 28}) %>
    <% } %>
  </div>
  <div class="section">
    <% site.tags.sort('name').map(function(tag){ %>
    <div class="tag-section">
      <h1 class="is-size-4">
        <%- fa_inline('tags', {prefix: 'fas'}) %>
        <%- tag.name %>
      </h1>
      <% tag.posts.sort('-date').map(function(post, i){ %>
        <a href="<%- url_for(post.path) %>">
          <div class="columns is-mobile is-gapless">
            <div class="column is-4">
              <h2 class="is-size-6">
                <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, 'MMM DD, YYYY') %></time>
              </h2>
            </div>
            <div class="column auto">
              <h2 class="is-size-6">
                <%= post.title %>
              </h2>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
    <% }) %>
  </div>
</article>
</section>
